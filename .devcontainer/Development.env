# Development Environment Configuration
# This file is loaded when ASPNETCORE_ENVIRONMENT=Development
# See launchSettings.json for more details.

# PostgreSQL Configuration (shared with .devcontainer/docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=knowledge
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# pgAdmin Configuration (shared with .devcontainer/docker-compose.yml)
PGADMIN_DEFAULT_EMAIL=admin@localhost.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development

# Knowledge (Application) Configuration (prefixed with APP_)
APP_NAME=Knowledge
APP_BASE_URL=http://localhost:8000
APP_LISTEN_URL=http://localhost:8000
APP_HTTPS_REDIRECT_ENABLED=false
APP_ENABLE_DETAILED_ERRORS=true
APP_LOG_LEVEL=Debug
